{
  "ignorePatterns": ["node_modules/", "docs/"],
  "extends": [
    "prettier",
    "plugin:jest/all"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "react"
  ],
  "rules": {
    "jest/no-hooks": [
      "error",
      {
        "allow": ["beforeEach", "beforeAll", "afterEach", "afterAll"]
      }
    ]
  },
  "env": {
    "browser": true
  }
}
